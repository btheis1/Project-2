    <h2 class="choose card-transparent z-depth-5" id="new">Add a new ingredient to your fridge: </h2>
    <br><br>
    <div class = "row">
        <form class = "col s12">
        <div class = "row">
            <div class = "input-field col s4">
                <i class = "material-icons prefix">account_circle</i>
                <input placeholder = "foodName" value = "carrots" id = "name"
                    type = "text" class = "active validate" required />
                <label for = "name"><strong>Ingredient Name:</strong></label>
            </div>
            <div class="input-field col s4">
                <select>
                <option value="" disabled selected>Choose your category</option>
                <option value="1">Vegetable</option>
                <option value="2">Protein</option>
                <option value="3">Fruit</option>
                <option value="3">Dairy</option>
                <option value="3">Legumes</option>
                <option value="3">Other</option>

                </select>
                <label><strong>Ingredient Cagegory:</strong></label>
            </div>
            <div class="col s4">
                <button class="btn waves-effect waves-light white-text" type="submit" name="newFood" id="newFood"><strong>Add Ingredient!</strong></button>
            </div>
            
        </div>
        
    </div>
